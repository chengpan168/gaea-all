<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="schedule-console" version="3.0">


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:spring/spring-*.xml;
        </param-value>
    </context-param>

    <context-param>
        <param-name>org.apache.velocity.properties</param-name>
        <param-value>/WEB-INF/config/velocity.properties</param-value>
    </context-param>
    <context-param>
        <param-name>org.apache.velocity.toolbox</param-name>
        <param-value>/WEB-INF/config/toolbox.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.json</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>requestContext</filter-name>
        <filter-class>com.gaea.common.web.context.RequestContextFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>requestContext</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>requestContext</filter-name>
        <url-pattern>*.json</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>gaea-filter</filter-name>
        <filter-class>com.gaea.client.GaeaFilter</filter-class>
        <init-param>
            <param-name>appName</param-name>
            <param-value>gaea</param-value>
        </init-param>
        <init-param>
            <param-name>exclusions</param-name>
            <param-value>/open/**,/login.htm, /logout.htm,/logoutAll.htm, /denied.htm</param-value>
        </init-param>
        <init-param>
            <param-name>host</param-name>
            <param-value>http://gaea.dianyadian.net:8080</param-value>
        </init-param>
        <init-param>
            <param-name>loginUrl</param-name>
            <param-value>http://gaea.dianyadian.net:8080/login.htm</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>gaea-filter</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>gaea-filter</filter-name>
        <url-pattern>*.json</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>sitemesh-velocity</servlet-name>
        <servlet-class>com.opensymphony.module.sitemesh.velocity.VelocityDecoratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sitemesh-velocity</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping>


    <!-- *******************************************************************************************	-->

    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath*:spring/spring-admin-mvc.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!-- ajax -->
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>
    <!--html-->
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
