<div class="content" id="content">
    <div class="ui masthead">
        <div class="ui container">
            <h1 class="ui header" id="contentHeader">Gea 权限平台</h1>
        </div>
    </div>
    <div class="main ui container">
        <div class="ui form">
            <form id="userForm" action="/login.htm">
                <input type="hidden" name="appName" value="$!{appName}">
                <input type="hidden" name="backUrl" value="$!{backUrl}">

                <div class="field required">
                    <label>工号</label>
                    <input type="text" placeholder="员工工号" name="staffId" value="170" />
                </div>
                <div class="field">
                    <label>密码</label>
                    <input type="text" placeholder="密码" name="rawPassword" value="test" />
                </div>
                <div class="field">
                    <label>记住我</label>
                    <input type="checkbox" placeholder="" name="remember" checked/>
                </div>
                <button type="submit" class="ui blue submit button" id="saveBtn">登录</button>
            </form>
        </div>
    </div>
</div>
